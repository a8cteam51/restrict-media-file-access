<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://phpmd.org/xml/ruleset_xml_schema_1.0.0.xsd">
	<!-- Extend the shared ruleset. -->
	<rule ref="./vendor/a8cteam51/team51-configs/quality-assurance/phpmd.dist.xml">
    	<exclude name="ExcessiveClassComplexity"/>
		<exclude name="LongVariable"/>
    </rule>

 	<rule ref="rulesets/codesize.xml/ExcessiveClassComplexity">
		<priority>1</priority>
		<properties>
			<property name="maximum" value="80"/>
		</properties>
	</rule>

	<!-- What NOT to scan. -->
	<exclude-pattern>*/tests/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
</ruleset>
